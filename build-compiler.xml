<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project default="create_run_jar" name="Create Runnable Jar for Project Mug with Jar-in-Jar Loader">
    <!--this file was created by Eclipse Runnable JAR Export Wizard-->
    <!--ANT 1.7 is required                                        -->
    <target name="create_run_jar">
        <jar destfile="lib/mug.jar">
            <manifest>
                <attribute name="Main-Class" value="org.eclipse.jdt.internal.jarinjarloader.JarRsrcLoader"/>
                <attribute name="Rsrc-Main-Class" value="mug.compiler"/>
                <attribute name="Class-Path" value="."/>
                <attribute name="Rsrc-Class-Path" value="./ clojure.jar clojure-contrib.jar asm-3.3.jar js.jar"/>
            </manifest>
            <zipfileset src="jar-in-jar-loader.zip"/>
            <fileset dir="bin"/>
            <zipfileset dir="." includes="clojure.jar"/>
            <zipfileset dir="." includes="clojure-contrib.jar"/>
            <fileset dir="classes"/>
            <zipfileset dir="lib" includes="asm-3.3.jar"/>
            <zipfileset dir="lib" includes="rhino-js.jar"/>
            <fileset dir="test/out"/>
        </jar>
    </target>
</project>
